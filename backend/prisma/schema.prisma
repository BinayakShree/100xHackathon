datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  phone     String
  country   String
  role      Role     @default(TOURIST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  TOURIST
  TUTOR
}
